<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="103dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.36"
                app:srcCompat="@drawable/menu2" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Pan cake"
                android:fontFamily="@font/yeonsung_regular"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/cart_image"
                app:layout_constraintTop_toTopOf="@+id/cart_image" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5"
                android:textSize="19dp"
                android:textColor="@color/green"
                app:layout_constraintBottom_toBottomOf="@+id/cart_image"
                app:layout_constraintEnd_toEndOf="@+id/item_name"
                app:layout_constraintHorizontal_bias="0.292"
                app:layout_constraintStart_toStartOf="@+id/item_name" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/minusBtn"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/inc_dec"
                android:src="@drawable/minus"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/itemCount"
                app:layout_constraintEnd_toStartOf="@+id/itemCount"
                app:layout_constraintTop_toTopOf="@+id/itemCount"
                app:layout_constraintVertical_bias="0.428" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/plusbtn"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/inc_dec"
                android:src="@drawable/plus"
                app:layout_constraintBottom_toBottomOf="@+id/itemCount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/itemCount"
                app:layout_constraintVertical_bias="0.428" />

            <TextView
                android:id="@+id/itemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/plusbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.19" />

            <ImageView
                android:id="@+id/trashbtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/plusbtn"
                app:layout_constraintStart_toStartOf="@+id/minusBtn"
                app:layout_constraintTop_toBottomOf="@+id/itemCount"
                app:srcCompat="@drawable/trash" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>